<div class="bg-mainos2 pt-5 pb-5">
<div class="container">
<p class="text-uppercase font-weight-bold"></p>
<div class="position-relative overflow-hidden shadow-lg bg-white border border-2 border-dark">

<% # Hero page %>
<!-- -------- START HEADER 1 w/ text and image on right ------- -->
  <header>
    <div class="page-header min-vh-100">
      <div class="oblique position-absolute top-0 h-100 d-md-block d-none">
        <div>
        <%= image_tag("hero.jpg", height: 850) %>
        </div>
      </div>
      <div>
        <div class="row">
          <div class="col-lg-12 col-md-7 d-flex justify-content-center flex-column">
             <div class="text-center text-gradient text-primary">
<h4>Changement de mot de passe</h4>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row">      
            <div class="text-center">
               <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRazSZo3Bibv8k9yljQSv_lgCpmBpaEbgRr2g&usqp=CAU" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-5"
                width="200px" alt="profile">
            </div>
            <div class="text-center ">      
              
              <div class="field col-4 mx-auto py-2">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "Email", class: "form-control" %>
              </div>
                
            </div>
        <div class="text-center">
           <div class="actions col-6 mx-auto py-2">
               <%= f.submit "valider", class: "rounded-0 btn bg-gradient-primary w-100" %>
           </div>
              <% end %>
        </div>               
      </div>     
     </div>
    </div>
  </div>
</div>
    




