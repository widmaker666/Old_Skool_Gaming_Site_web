<div class="container p-5">
<h1 class="pb-3">Modifier l'article</h1>
  <div class="container bg-white border border-2 border-dark">
<%= form_with url: "/articles/#{params[:id]}", method: :put do |form| %>

  <div class="form-group mb-3 mt-3 col-sm">
    <%= @article.title %>
    <%= form.text_field :title, class:"form-control", placeholder:"Titre" %>
  </div>

  <div class="form-group mb-3 mt-3 col-sm">
    <%= @article.content %>
    <%= form.text_field :description, class:"form-control", placeholder:"Description" %>
  </div>

  <div class="form-group mb-3 mt-3 col-sm">
    <%= @article.price %>
    <%= form.text_field :price, class:"form-control", placeholder:"Prix" %>
  </div>

  <div class=" text-center">
