<header class="bg-dark">
  <div class="page-header min-vh-75">
    <span class="mask opacity-5"></span>
    <div class="container">
      <div class="row justify-content-center">
        <div
          class="col-lg-6 col-md-5 order-md-1 mama d-none d-xl-block"
          style="width: 30rem"
        ><%= image_tag "game.png", height: 200, class:"img-fluid" %></div>
        <div
          class="
            col-lg-4
            mx-auto
            my-auto
            bg-white
            p-5
            pb-0
            border
            border-2
            border-dark
            zoom
          "
        >
          <h3 class="text-dark pb-3">Prêt à faire du tri dans tes cartons ?</h3>
          <%= link_to "Vends maintenant", new_user_registration_path, class:"btn btn-lg btn-primary rounded-0" %>
          <div><%= link_to "Découvrir comment ça marche", old_path, class:"text-decoration-underline" %></div>

          <div class="d-flex justify-content-center">
            <a href="javascript:;"><i class="fab fa-facebook text-lg text-white me-4"></i></a>
            <a href="javascript:;"><i class="fab fa-instagram text-lg text-white me-4"></i></a>
            <a href="javascript:;"><i class="fab fa-twitter text-lg text-white me-4"></i></a>
            <a href="javascript:;"><i class="fab fa-google-plus text-lg text-white"></i></a>

          </div>
        </div>
      </div>
    </div>
    <div class="position-absolute w-100 z-index-1 bottom-0">
      <svg
        class="waves"
        xmlns="http://www.w3.org/2000/svg"
        xmlns:xlink="http://www.w3.org/1999/xlink"
        viewBox="0 24 150 40"
        preserveAspectRatio="none"
        shape-rendering="auto"
      >
        <defs>
          <path
            id="gentle-wave"
            d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z"
          />
        </defs>
        <g class="moving-waves">
          <use xlink:href="#gentle-wave" x="48" y="-1" fill="rgba(255,255,255,0.40"/>
          <use xlink:href="#gentle-wave" x="48" y="3" fill="rgba(255,255,255,0.35)"/>
          <use xlink:href="#gentle-wave" x="48" y="5" fill="rgba(255,255,255,0.25)"/>
          <use xlink:href="#gentle-wave" x="48" y="8" fill="rgba(255,255,255,0.20)"/>
          <use xlink:href="#gentle-wave" x="48" y="13" fill="rgba(255,255,255,0.15)"/>
          <use xlink:href="#gentle-wave" x="48" y="16" fill="rgba(255,255,255,1"/>
        </g>
      </svg>
    </div>
  </div>
</header>

